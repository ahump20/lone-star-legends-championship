# Blaze Intelligence Backend Environment Variables

# JWT Configuration
JWT_SECRET=blaze-intelligence-dev-secret-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/blaze_intelligence
REDIS_URL=redis://localhost:6379

# API Keys
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ACCOUNT_ID=your_account_id

# External API Keys
MLB_API_KEY=your_mlb_api_key
NFL_API_KEY=your_nfl_api_key
NBA_API_KEY=your_nba_api_key
CFBD_API_KEY=your_college_football_data_api_key
PG_API_KEY=your_perfect_game_api_key

# Environment
NODE_ENV=development
PORT=3000
API_VERSION=2.0.0

# Observability
SENTRY_DSN=your_sentry_dsn
OTEL_ENDPOINT=http://localhost:4317

# Rate Limiting
RATE_LIMIT_REDIS=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100