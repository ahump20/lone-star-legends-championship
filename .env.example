# Blaze Intelligence - Environment Configuration Template
# Copy this file to .env and update with your actual values

# === Cloudflare Configuration ===
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# === Database Configuration ===
DATABASE_URL=your_database_connection_string_here
REDIS_URL=your_redis_connection_string_here

# === API Keys ===
SPORTS_DATA_API_KEY=your_sports_data_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
ANALYTICS_API_KEY=your_analytics_api_key_here

# === Third-Party Integrations ===
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# === Security ===
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# === Monitoring ===
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# === Deployment ===
ENVIRONMENT=development
DOMAIN=localhost:3000
BASE_URL=http://localhost:3000

# === Feature Flags ===
ENABLE_MULTIPLAYER=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME=true

# === AI Model Configuration ===
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# === Sports Team Configuration ===
CARDINALS_TEAM_ID=stl_cardinals
TITANS_TEAM_ID=ten_titans
LONGHORNS_TEAM_ID=tex_longhorns
GRIZZLIES_TEAM_ID=mem_grizzlies