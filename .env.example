# Blaze Intelligence Environment Variables
# Copy this file to .env and fill in your values

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here
CLOUDFLARE_ZONE_ID=your-zone-id-here

# Database Configuration (D1)
D1_DATABASE_ID=your-database-id-here
D1_DATABASE_NAME=blaze-intelligence-db

# KV Namespace (for caching)
KV_NAMESPACE_ID=your-kv-namespace-id-here

# API Keys (keep these secure!)
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
OPENAI_API_KEY=sk-your-key-here

# Sports Data APIs
MLB_API_KEY=your-mlb-api-key
NFL_API_KEY=your-nfl-api-key
NBA_API_KEY=your-nba-api-key
NCAA_API_KEY=your-ncaa-api-key

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-key
SUPPORT_EMAIL=support@blaze-intelligence.com
ADMIN_EMAIL=ahump20@outlook.com

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Feature Flags
ENABLE_PAYMENT=true
ENABLE_MULTIPLAYER=true
ENABLE_AI_SCOUTING=true
ENABLE_NIL_VALUATION=true

# URLs
API_BASE_URL=https://api.blaze-intelligence.com
APP_URL=https://blaze-intelligence.com
CDN_URL=https://cdn.blaze-intelligence.com

# Security
JWT_SECRET=generate-a-secure-random-string-here
ENCRYPTION_KEY=generate-another-secure-random-string

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Cache Settings
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info