# Blaze Intelligence - Environment Configuration Template
# Copy this to .env and fill in your actual values

# ================================
# TELEMETRY & ANALYTICS
# ================================
TELEMETRY_ENDPOINT="/api/telemetry"
TELEMETRY_SAMPLING_RATE="1.0"
TELEMETRY_PRIVACY_MODE="false"
TELEMETRY_BATCH_SIZE="50"
TELEMETRY_FLUSH_INTERVAL="30000"

# ================================
# OPENTELEMETRY CONFIGURATION
# ================================
OTEL_SERVICE_NAME="blaze-intelligence-lsl"
OTEL_SERVICE_VERSION="1.0.0"
OTEL_RESOURCE_ATTRIBUTES="service.name=blaze-intelligence-lsl,service.version=1.0.0,deployment.environment=production"
OTEL_EXPORTER_OTLP_ENDPOINT="https://api.honeycomb.io"
OTEL_EXPORTER_OTLP_HEADERS="x-honeycomb-team=YOUR_HONEYCOMB_API_KEY"

# ================================
# CLOUDFLARE CONFIGURATION
# ================================
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"
CLOUDFLARE_PAGES_PROJECT="blaze-intelligence-lsl"

# ================================
# AUTOMATED AGENTS CONFIGURATION
# ================================

# Digital Combine Autopilot
GITHUB_TOKEN="ghp_your-github-personal-access-token"
NOTION_TOKEN="ntn_your-notion-integration-token"
NOTION_DATABASE_ID="your-notion-database-id"

# Cardinals Readiness Board  
SPORTS_API_KEY="your-sports-data-api-key"
BASEBALL_SAVANT_API="https://baseballsavant.mlb.com/api"

# Inbox â†’ Call Pipeline
ZAPIER_AUTH_TOKEN="your-zapier-webhook-auth-token"
HUBSPOT_API_KEY="your-hubspot-private-app-key"
GMAIL_API_CREDENTIALS="your-gmail-api-service-account-json"
CALENDAR_API_KEY="your-google-calendar-api-key"

# ================================
# DATABASE & STORAGE
# ================================
DATABASE_URL="postgresql://user:password@host:port/database"
REDIS_URL="redis://localhost:6379"
R2_BUCKET_NAME="blaze-intelligence-data"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# ================================
# EXTERNAL INTEGRATIONS
# ================================

# Sports Data Sources
MLB_STATCAST_API="your-mlb-statcast-api-key"
NFL_API_KEY="your-nfl-api-key"  
NCAA_API_KEY="your-ncaa-api-key"
NBA_API_KEY="your-nba-api-key"

# Social & Marketing
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
LINKEDIN_API_KEY="your-linkedin-api-key"

# ================================
# SECURITY & ENCRYPTION
# ================================
JWT_SECRET="your-256-bit-jwt-secret-key"
ENCRYPTION_KEY="your-aes-256-encryption-key"
API_RATE_LIMIT="1000"
CORS_ORIGINS="https://blaze-intelligence-lsl.pages.dev,https://blaze-intelligence.com"

# ================================
# MONITORING & OBSERVABILITY  
# ================================
SENTRY_DSN="your-sentry-project-dsn"
DATADOG_API_KEY="your-datadog-api-key"
NEW_RELIC_LICENSE_KEY="your-newrelic-license-key"
PAGERDUTY_INTEGRATION_KEY="your-pagerduty-integration-key"

# ================================
# GAME-SPECIFIC CONFIGURATION
# ================================
MULTIPLAYER_SERVER_URL="wss://multiplayer.blaze-intelligence.com"
LEADERBOARD_REDIS_KEY_PREFIX="lsl:leaderboard"
GAME_PHYSICS_ENGINE="cannon"
WEBSOCKET_MAX_CONNECTIONS="1000"

# ================================
# DEVELOPMENT & TESTING
# ================================
NODE_ENV="production"
LOG_LEVEL="info"
DEBUG_MODE="false"
MOCK_API_ENABLED="false"
LOAD_TEST_ENABLED="false"

# ================================
# BUSINESS & COMPLIANCE
# ================================
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"
GDPR_COMPLIANCE_ENABLED="true"
PRIVACY_POLICY_URL="https://blaze-intelligence.com/privacy"
TERMS_OF_SERVICE_URL="https://blaze-intelligence.com/terms"